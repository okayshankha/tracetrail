{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types",
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "commitlint.config.js",
    "dev/**/*",
    "dist/**/*",
    "react-ui/*",
    "examples/*",
    "ui/*",
    "install-react-ui"
  ]
}